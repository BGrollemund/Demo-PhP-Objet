{% extends "user/rent-list.twig" %}

{% block content %}
    <div class="d-flex justify-content-center">
        <div class="card w-100">
            <ul class="list-unstyled">
                {% for booking in bookings %}
                    <div class="card m-3">
                        <li class="font-weight-bolder  card-body p-2">
                            <h5 class="text-primary">Location confirmé du {{ booking.start_date }} au {{ booking.end_date }}</h5>
                        </li>
                        <li class="d-flex card-body p-2">
                            <ul class="list-unstyled">
                                <li class=" p-1">
                                    <em>{{ booking.renting_type_label }}</em>
                                </li>
                                <li class="p-1">
                                    {{ booking.city }} ({{ booking.country }})
                                </li>
                                <li class="font-weight-bold p-3">
                                    {{ booking.description }}
                                </li>
                                <li class="p-1">
                                    {{ booking.sleeping_num }} couchage(s), {{ booking.area }} m²
                                </li>
                                <li class="font-weight-bold p-1">
                                    {{ booking.price }} € par nuit
                                </li>
                            </ul>
                        </li>
                        <div class="align-self-end card-body p-2">
                            <a href="{{ route( 'rent-detail', { 'id': booking.renting_id } ) }}" class="btn btn-success mx-3">Voir le détail</a>
                        </div>
                    </div>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}